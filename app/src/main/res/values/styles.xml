<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbarcolor</item>

        <item name="android:icon">@drawable/iconosmall</item>
        <item name="android:displayOptions">showHome|useLogo|showTitle</item>
        <!-- Support library compatibility -->
        <item name="background">@color/actionbarcolor</item>
        <item name="icon">@drawable/iconosmall</item>
        <item name="displayOptions">showHome|useLogo|showTitle</item>
    </style>

    <style name="StyleText">
        <item name="android:layout_width">wrap_content</item>

    </style>

    <style name="StyleGeneralText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="StyleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
